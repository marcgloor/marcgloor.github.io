text
@#!/bin/sh
# generate sitemap, written by Marc O. Gloor

TME=$(date -u '+%d/%m/%Y %H:%M:%S')
SM="sitemap.html"
cd ..

echo "please wait while creating sitemap..."

echo "<html>" > $SM
echo "<head>" >> $SM
echo " <title>Index Sitemap</title>" >> $SM
echo "</head>" >> $SM
echo "<body text="#000000" bgcolor="#FFFFFF" link="#0000EF" vlink="#51188E" alink="#FF0000">" >> $SM
echo "<b><font size=+1>Sitemap</font></b>" >> $SM
echo "<br>autogenerated $TME<br>" >> $SM
echo "<hr WIDTH="100%">" >> $SM
echo "<blockquote>" >> $SM
fgrep "<title>" *.html | sort | tr -d ":" | awk 'split($0, token, \
 "[<>]"){printf("<li><a href=\"%s\">[%s] %s</a></li>\n",$1,$1,tolower(token[3]))}' >> $SM
echo "</blockquote>" >> $SM
echo "<hr WIDTH="100%">" >> $SM
echo "<table BORDER=0 CELLSPACING=0 CELLPADDING=0 COLS=2 WIDTH="100%" NOSAVE >" >> $SM
echo "<tr NOSAVE>" >> $SM
echo "<td WIDTH="90%" NOSAVE>" >> $SM
echo "<dt>" >> $SM
echo "<i>\$Id\$ </i></dt>" >> $SM
echo "<dt>" >> $SM
echo "<i>Author: <a href="mailto:mgloor@@fhzh.ch">mgloor@@fhzh.ch</a></i></dt>" >> $SM
echo "<td VALIGN=TOP NOSAVE>" >> $SM
echo "<div align=right><i><a href="index.html">home</a></i></div>" >> $SM
echo "</td>" >> $SM
echo "</tr>" >> $SM
echo "<tr>" >> $SM
echo "<td></td>" >> $SM
echo "<td></td>" >> $SM
echo "</tr>" >> $SM
echo "</table>" >> $SM
echo "</body>" >> $SM
echo "</html>" >> $SM
echo "sitemap successfully created."
@


